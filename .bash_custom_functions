# CUSTOM SHELL FUNCTIONS
function init-ssh() {
  pkill ssh-agent
  eval $(ssh-agent -s)
  for key in $(find ${HOME}/.ssh/ -type f -name 'id_rsa*' ! -name '*pub' -perm 400); do
    ssh-add $key
  done
}

function new-branch() {
  echo "$(whoami)-$(openssl rand -hex 8)"
}

function cert-dates() {
  website=$1
  openssl s_client -connect $website:443 </dev/null 2>/dev/null | openssl x509 -noout -dates
}

